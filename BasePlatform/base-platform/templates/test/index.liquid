<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ storeName }}</title>
</head>
<body class="bg-gray-50">

    <header class="text-center my-8">
        <h1 class="text-4xl font-bold">{{ storeName }}</h1>
    </header>

    <!-- Popular Products Section -->
    <section class="my-12">
        <div class="container mx-auto px-4">
            <h2 class="text-2xl font-semibold text-center mb-8">Popular Products</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for product in products %}
                    <div class="bg-white shadow rounded overflow-hidden">
                        <img src="{{ product.image }}" alt="{{ product.title }}" class="w-full h-48 object-cover">
                        <div class="p-4">
                            <h5 class="text-xl font-semibold">{{ product.title }}</h5>
                            <p class="mt-2 text-gray-600">{{ product.description }}</p>
                            <p class="mt-2 text-gray-600">Price: â‚¬{{ product.price }}</p>
                            <a href="{{ product.url }}" class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Shop Now</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <footer class="text-center py-4 bg-gray-100">
        <p>&copy; {{ 'now' | date: "%Y" }} {{ storeName }}. All rights reserved.</p>
    </footer>
</body>